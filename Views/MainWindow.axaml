<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MealPrepHelper.ViewModels"
        xmlns:views="using:MealPrepHelper.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="MealPrepHelper.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Meal Prep Helper"
        xmlns:models="using:MealPrepHelper.Models"
        RequestedThemeVariant="Light"
        Background="GhostWhite">

    <Window.Styles>
        <Style Selector="Button.tab">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.tab.active">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#C1E1C1"/>
        </Style>
        <Style Selector="Button.tab.inactive">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
        <Style Selector="Button.tab:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="19"/>
        </Style>
    </Window.Styles>

    <Window.DataTemplates>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OverviewViewModel}">
            <views:OverviewView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CalendarViewModel}">
            <views:CalendarView/>
        </DataTemplate>
    </Window.DataTemplates>

    <Grid>
        
        <Grid RowDefinitions="Auto, *">
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="10"
                        IsVisible="{Binding IsLoggedIn}">
                <Button Content="pÅ™ehled" Classes="tab" Classes.active="{Binding IsOverviewActive}" 
                        Command="{Binding SwitchToOverviewCommand}"/>
                <Button Content="kalendÃ¡Å™" Classes="tab" Classes.active="{Binding IsCalendarActive}" 
                        Command="{Binding SwitchToCalendarCommand}"/>
            </StackPanel>

            <ContentControl Grid.Row="1" Content="{Binding CurrentPage}" Margin="20"/>
        </Grid>


        <Grid IsVisible="{Binding CalendarVM.IsPopupVisible, FallbackValue=False}" Grid.RowSpan="99">
            
            <Button Command="{Binding CalendarVM.ClosePopupCommand}"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                    Background="#80000000">
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#80000000"/>
                    </Style>
                </Button.Styles>
            </Button>

            <Border Width="400" Height="500" Background="White" CornerRadius="10" 
                    BoxShadow="0 0 20 0 #55000000"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                
                <Grid RowDefinitions="Auto, *">
                    <Grid Grid.Row="0" Margin="15" ColumnDefinitions="*, Auto">
                        <TextBlock Text="{Binding CalendarVM.SelectedDate, StringFormat='PlÃ¡n pro {0:d.M.yyyy}'}" 
                                   FontWeight="Bold" FontSize="18" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Content="âœ•" 
                                Command="{Binding CalendarVM.ClosePopupCommand}"
                                Background="Transparent" Foreground="Gray" FontWeight="Bold"/>
                    </Grid>

                    <Border Grid.Row="1" BorderBrush="#EEE" BorderThickness="0,1,0,0" Padding="20">
                        <Grid RowDefinitions="Auto, *">
                            
                            <Grid Grid.Row="0" ColumnDefinitions="*, *, Auto" RowDefinitions="Auto, Auto" Margin="0,0,0,15">
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                    <TextBlock Text="Typ jÃ­dla" FontSize="12" Foreground="Gray"/>
                                    <ComboBox ItemsSource="{Binding CalendarVM.MealTypes}" 
                                              SelectedItem="{Binding CalendarVM.FormType}" HorizontalAlignment="Stretch"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,10">
                                    <TextBlock Text="ÄŒas" FontSize="12" Foreground="Gray"/>
                                    <TimePicker SelectedTime="{Binding CalendarVM.FormTime}" HorizontalAlignment="Stretch"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,0">
    <TextBlock Text="Recept" FontSize="12" Foreground="Gray"/>
    
    <Grid ColumnDefinitions="*, 10, Auto, 10, Auto">
        
       <AutoCompleteBox Grid.Column="0"
                 ItemsSource="{Binding CalendarVM.AvailableRecipes}"
                 SelectedItem="{Binding CalendarVM.FormRecipe}"
                 
                 Text="{Binding CalendarVM.SearchText}"  FilterMode="Contains"
                 ValueMemberBinding="{Binding Name}"
                 Watermark="Hledat recept..."
                 HorizontalAlignment="Stretch"/>

        <Button Grid.Column="2" 
                Command="{Binding CalendarVM.CancelEditCommand}"
                Background="#EEE" Foreground="Gray"
                ToolTip.Tip="VyÄistit formulÃ¡Å™ / ZruÅ¡it Ãºpravu">
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBlock Text="âœ•" FontWeight="Bold"/>
                <TextBlock Text="ZruÅ¡it" IsVisible="{Binding CalendarVM.IsEditing}"/>
            </StackPanel>
        </Button>

        <Button Grid.Column="4" 
                Content="{Binding CalendarVM.SaveButtonText}"
                Command="{Binding CalendarVM.SaveMealCommand}"
                Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
    </Grid>
</StackPanel>
                            </Grid>


                            <ScrollViewer Grid.Row="1">
                                <ItemsControl ItemsSource="{Binding CalendarVM.SelectedDayMeals}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#FAFAFA" BorderBrush="#EEE" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,8">
                                                <Grid ColumnDefinitions="Auto, *, Auto, Auto">
                                                    
                                                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Width="60">
                                                        <TextBlock Text="{Binding ScheduledFor, StringFormat='HH:mm'}" FontWeight="Bold"/>
                                                        <TextBlock Text="{Binding MealType}" FontSize="11" Foreground="Gray"/>
                                                    </StackPanel>

                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Recipe.Name}" FontWeight="SemiBold"/>
                                                        <TextBlock Text="{Binding Recipe.TotalCalories, StringFormat='{}{0} kcal'}" FontSize="11" Foreground="Gray"/>
                                                    </StackPanel>

                                                    <Button Grid.Column="2" Content="âœï¸" 
                                                            Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CalendarVM.EditMealCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="Transparent" BorderThickness="0" Padding="5"/>

                                                    <Button Grid.Column="3" Content="ðŸ—‘ï¸" 
                                                            Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CalendarVM.DeleteMealCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="Transparent" BorderThickness="0" Padding="5" Foreground="#D32F2F"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>